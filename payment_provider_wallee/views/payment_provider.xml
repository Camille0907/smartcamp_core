<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Wallee Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="provider_credentials"]' position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'wallee')]}">
                    <field name="wallee_space_id"
                           attrs="{'required':[('code', '=', 'wallee'), ('state', '!=', 'disabled')]}"/>
                    <field name="wallee_application_user_id"
                           attrs="{'required':[('code', '=', 'wallee'), ('state', '!=', 'disabled')]}"/>
                    <field name="wallee_application_user_auth_key"
                           attrs="{'required':[('code', '=', 'wallee'), ('state', '!=', 'disabled')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
